<%- include('../presentation_layer/partials/includecss'); %>

<div
  class="flex min-h-screen flex-col items-center justify-center bg-gray-100 dark:bg-gray-950"
>
  <div
    class="mx-auto w-full max-w-md space-y-8 rounded-lg bg-white p-8 shadow-lg dark:bg-gray-900"
  >
    <div>
      <h2
        class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-50"
      >
        Register
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400">
        Or<!-- -->
        <a
          class="font-medium text-[#1d9bf0] hover:text-[#1a8cd8] dark:text-[#1d9bf0] dark:hover:text-[#1a8cd8]"
          href="#"
        >
          sign in to your account
        </a>
      </p>
    </div>
    <form class="space-y-6" action="#" method="POST">
      <div>
        <label
          for="name"
          class="block text-sm font-medium text-gray-700 dark:text-gray-300"
        >
          Name
        </label>
        <div class="mt-1">
          <input
            id="name"
            type="text"
            autocomplete="name"
            required=""
            class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-[#1d9bf0] focus:outline-none focus:ring-[#1d9bf0] dark:border-gray-600 dark:bg-gray-800 dark:text-gray-50 dark:placeholder-gray-400 dark:focus:border-[#1d9bf0] dark:focus:ring-[#1d9bf0]"
            name="name"
          />
        </div>
      </div>
      <div>
        <label
          for="email"
          class="block text-sm font-medium text-gray-700 dark:text-gray-300"
        >
          Email address
        </label>
        <div class="mt-1">
          <input
            id="email"
            type="email"
            autocomplete="email"
            required=""
            class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-[#1d9bf0] focus:outline-none focus:ring-[#1d9bf0] dark:border-gray-600 dark:bg-gray-800 dark:text-gray-50 dark:placeholder-gray-400 dark:focus:border-[#1d9bf0] dark:focus:ring-[#1d9bf0]"
            name="email"
          />
        </div>
      </div>
      <div>
        <label
          for="password"
          class="block text-sm font-medium text-gray-700 dark:text-gray-300"
        >
          Password
        </label>
        <div class="mt-1">
          <input
            id="password"
            type="password"
            autocomplete="current-password"
            required=""
            class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-[#1d9bf0] focus:outline-none focus:ring-[#1d9bf0] dark:border-gray-600 dark:bg-gray-800 dark:text-gray-50 dark:placeholder-gray-400 dark:focus:border-[#1d9bf0] dark:focus:ring-[#1d9bf0]"
            name="password"
          />
        </div>
      </div>
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <input
            id="remember-me"
            type="checkbox"
            class="h-4 w-4 rounded border-gray-300 text-[#1d9bf0] focus:ring-[#1d9bf0] dark:border-gray-600 dark:bg-gray-800 dark:ring-offset-gray-900 dark:focus:ring-[#1d9bf0]"
            name="remember-me"
          /><label
            for="remember-me"
            class="ml-2 block text-sm text-gray-900 dark:text-gray-300"
          >
            Remember me
          </label>
        </div>
        <div class="text-sm">
          <a
            class="font-medium text-[#1d9bf0] hover:text-[#1a8cd8] dark:text-[#1d9bf0] dark:hover:text-[#1a8cd8]"
            href="#"
          >
            Forgot your password?
          </a>
        </div>
      </div>
      <div>
        <button
          type="submit"
          class="flex w-full justify-center rounded-md bg-[#1d9bf0] py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-[#1a8cd8] focus:outline-none focus:ring-2 focus:ring-[#1d9bf0] focus:ring-offset-2 dark:bg-[#1d9bf0] dark:hover:bg-[#1a8cd8] dark:focus:ring-offset-gray-900"
        >
          Register
        </button>
      </div>
    </form>
  </div>
</div>
